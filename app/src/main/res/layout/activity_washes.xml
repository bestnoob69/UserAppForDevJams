<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/orders_page_header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#afeeee"
            android:gravity="center"
            android:paddingStart="3dp"
            android:text="Washes Page"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orders_page_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/orders_page_header"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="You can view all your previous washes on this page.\nClick on any order to view more details."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/products_pastwashes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orders_page_details"
            android:background="#F8AA37"
            android:gravity="center|start"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Past Washes"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_pastwashes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/products_pastwashes"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:nestedScrollingEnabled="false" />

    </RelativeLayout>

</ScrollView>